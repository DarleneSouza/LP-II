import java.util.Scanner;

public class Main { 
	public static void main(String[] args) {
		//método de entrada por onde começa a  executar
		
		System.out.println("Digite seu nome: ");
		
		
		Scanner leitor = new Scanner(System.in);
		// classe  que permite fazer leitura do que é digitado
		
		String nome = leitor.nextLine();
		//pega a próxima linha e coloca na variável(nome)o que for digitado
		
		System.out.println("Bem vindo "+nome+" ao mundo Java");
		//printa na tela o que foi digitado 
		//atalho Sysout
		
		
		
	}	
	
}
